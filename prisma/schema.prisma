generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Inventory_Transactions {
  TransactionID   Int                                    @id @default(autoincrement())
  ProductID       Int
  SupplierID      Int?
  TransactionType Inventory_Transactions_TransactionType
  Quantity        Int
  TransactionDate DateTime?                              @default(now()) @db.DateTime(0)
  Products        Products                               @relation(fields: [ProductID], references: [ProductID], onUpdate: Restrict, map: "Inventory_Transactions_ibfk_1")
  Suppliers       Suppliers?                             @relation(fields: [SupplierID], references: [SupplierID], onDelete: Restrict, onUpdate: Restrict, map: "Inventory_Transactions_ibfk_2")

  @@index([ProductID], map: "ProductID")
  @@index([SupplierID], map: "SupplierID")
}

model Products {
  ProductID              Int                      @id @default(autoincrement())
  ProductName            String                   @db.VarChar(100)
  Category               String?                  @db.VarChar(50)
  QuantityInStock        Int?                     @default(0)
  Price                  Decimal                  @db.Decimal(10, 2)
  Inventory_Transactions Inventory_Transactions[]
}

model Suppliers {
  SupplierID             Int                      @id @default(autoincrement())
  SupplierName           String                   @db.VarChar(100)
  ContactEmail           String?                  @db.VarChar(100)
  ContactPhone           String?                  @db.VarChar(15)
  Inventory_Transactions Inventory_Transactions[]
}

enum Inventory_Transactions_TransactionType {
  IN
  OUT
}
